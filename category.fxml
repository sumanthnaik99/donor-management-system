<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="temple_app.CategoryController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <HBox prefHeight="67.0" prefWidth="238.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Category Name :">
                                 <HBox.margin>
                                    <Insets right="3.0" />
                                 </HBox.margin></Text>
                              <TextField fx:id="category_textfield" />
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#add_category" text="Add" />
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <ComboBox fx:id="category_combo" prefWidth="150.0">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin></ComboBox>
                              <Button mnemonicParsing="false" onAction="#delete_category" text="Delete" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</VBox>
